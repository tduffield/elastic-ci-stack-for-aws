[Unit]
Description=Buildkite Agent (%i)
Documentation=https://buildkite.com/agent
After=syslog.target
After=network.target
After=docker.service

[Service]
Type=simple
User=buildkite-agent
Environment="HOME=/var/lib/buildkite-agent"
Environment="PATH=/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin"
Environment="USER=buildkite-agent"
ExecStart=/usr/bin/buildkite-agent start --disconnect-after-job --disconnect-after-job-timeout 3600
ExecStopPost=/usr/local/bin/mark-asg-unhealthy
ExecStopPost=/bin/sudo poweroff
RestartSec=5
Restart=on-failure
TimeoutStartSec=10
TimeoutStopSec=infinity
KillMode=process

[Install]
WantedBy=multi-user.target
DefaultInstance=1
